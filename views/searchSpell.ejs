<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/spell.css">
    <title>Search Spells</title>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/search-character">Search Characters</a></li>
                <li><a href="/search-book">Search Books</a></li>
                <li><a href="/search-movie">Search Movies</a></li>
            </ul>
        </nav>
        <h1>Search for Spells</h1>
    </header>
    <main>
        <section class="search-bar">
            <form method="GET" action="/search-spell">
                <label for="spell">Spell:</label>
                <input id="spell" name="spell" value="<%= spell || '' %>" />
                <button type="submit">Search</button>
            </form>
        </section>

        <% if (spells.length > 0) { %>
            <section class="results">
                <h2>Matching Spells</h2>
                <ul>
                    <% spells.forEach((spell) => { %>
                        <li class="spell-card">
                            <h3><strong>Spell:</strong> <%= spell.name %></h3>
                            <p><strong>Effect:</strong> <%= spell.effect || 'Unknown' %></p>
                            <% if (spell.image) { %>
                                <img src="<%= spell.image %>" alt="<%= spell.name %>" />
                            <% } %>
                            <a href="<%= spell.wiki %>" target="_blank" class="learn-more">Read more</a>
                        </li>
                    <% }) %>
                </ul>
            </section>
        <% } else if (spell) { %>
            <p class="no-results">No matching spells found.</p>
        <% } %>
    </main>
</body>
</html>