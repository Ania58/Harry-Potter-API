<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Search Characters</title>
</head>
<body>
    <main>
        <h1>Search for Characters</h1>
        <form method="GET" action="/search-character">
            <label for="name">Character Name:</label>
            <input id="name" name="name" value="<%= name || '' %>" />
            <button type="submit">Search</button>
        </form>

        <% if (characters.length > 0) { %>
            <h2>Matching Characters</h2>
            <ul>
                <% characters.forEach((character) => { %>
                    <li>
                        <p><strong>Name:</strong> <%= character.name %></p>
                        <p><strong>House:</strong> <%= character.house || 'Unknown' %></p>
                        <% if (character.image) { %>
                            <img src="<%= character.image %>" alt="<%= character.name %>" style="max-width: 200px;" />
                        <% } %>
                        <a href="<%= character.wiki %>" target="_blank">Read more</a>
                    </li>
                <% }) %>
            </ul>
        <% } else if (name) { %>
            <p>No matching characters found.</p>
        <% } %>
    </main>
</body>
</html>