<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/character.css">
    <title>Search Characters</title>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/search-spell">Search Spells</a></li>
                <li><a href="/search-book">Search Books</a></li>
                <li><a href="/search-movie">Search Movies</a></li>
            </ul>
        </nav>
        <h1>Search for Characters</h1>
    </header>
    <main>
        <section class="search-bar">
            <form method="GET" action="/search-character">
                <label for="name">Character Name:</label>
                <input id="name" name="name" value="<%= name || '' %>" />
                <button type="submit">Search</button>
            </form>
        </section>
        <% if (characters.length > 0) { %>
            <section class="results">
                <h2>Matching Characters</h2>
                <ul>
                    <% characters.forEach((character) => { %>
                        <li class="character-card">
                            <h3><strong>Name:</strong> <%= character.name %></h3>
                            <p><strong>House:</strong> <%= character.house || 'Unknown' %></p>
                            <% if (character.image) { %>
                                <img src="<%= character.image %>" alt="<%= character.name %>" style="max-width: 200px;" />
                            <% } %>
                            <a href="<%= character.wiki %>" target="_blank" class="learn-more">Read more</a>
                        </li>
                    <% }) %>
                </ul>
            </section>
        <% } else if (name) { %>
            <p class="no-results">No matching characters found.</p>
        <% } %>
    </main>
</body>
</html>