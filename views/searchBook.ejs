<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Search Books</title>
</head>
<body>
    <main>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/search-character">Search Characters</a></li>
                <li><a href="/search-spell">Search Spells</a></li>
                <li><a href="/search-movie">Search Movies</a></li>
            </ul>
        </nav>
        <h1>Search for Books</h1>
        <form method="GET" action="/search-book">
            <label for="book">Book:</label>
            <input id="book" name="book" value="<%= book || '' %>" />
            <button type="submit">Search</button>
        </form>

        <% if (books.length > 0) { %>
            <h2>Matching Books</h2>
            <ul>
                <% books.forEach((book) => { %>
                    <li>
                        <p><strong>Book:</strong> <%= book.title %></p>
                        <p><strong>Release:</strong> <%= book.release_date %></p>
                        <p><strong>Summary:</strong> <%= book.summary || 'Unknown' %></p>
                        <% if (book.cover) { %>
                            <img src="<%= book.cover %>" alt="<%= book.title %>" style="max-width: 200px;" />
                        <% } %>
                        <a href="<%= book.wiki %>" target="_blank">Read more</a>
                    </li>
                <% }) %>
            </ul>
        <% } else if (book) { %>
            <p>No matching books found.</p>
        <% } %>
    </main>
</body>
</html>